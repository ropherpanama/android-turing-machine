<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.comp_compl_mt_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.comp.mt.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.comp.mt.EstadosActivity"
            android:label="@string/title_activity_estados"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.comp.mt.VerifyActivity"
            android:label="@string/title_activity_verify"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.comp.mt.TransitionsActivity"
            android:label="@string/title_activity_transitions"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.comp.mt.RunActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_run" >
        </activity>
    </application>

</manifest>
